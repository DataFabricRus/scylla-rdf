<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{dd-MMM-yyyy HH:mm:ss.SSS} %-5level [%thread] %logger{50} - %msg%n</pattern>
        </encoder>
    </appender>

    <logger name="cc.datafabric.scyllardf" level="DEBUG"/>
    <logger name="org.eclipse.rdf4j" level="DEBUG"/>
    <logger name="org.eclipse.rdf4j.rio" level="INFO"/>
    <logger name="org.eclipse.rdf4j.query.parser" level="INFO"/>
    <logger name="org.eclipse.rdf4j.query.resultio" level="INFO"/>

    <root>
        <level value="INFO"/>
        <appender-ref ref="STDOUT"/>
    </root>
</configuration>